<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/exhange"
    android:clickable="true"
    tools:context=".exchange">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="91dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:clickable="true"
        app:srcCompat="@drawable/candy" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imageView14"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="91dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView14"
        android:layout_marginEnd="32dp"
        app:srcCompat="@drawable/ccb" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:background="@drawable/round_corner"
        android:text="Exchange" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="91dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView14"
        android:layout_marginTop="187dp"
        android:clickable="true"
        app:srcCompat="@drawable/ccb" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="91dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/imageView14"
        android:layout_alignTop="@+id/imageView19"
        android:background="@drawable/blackcorner"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Enter amount"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:visibility="invisible"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imageView19"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="91dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/imageView18"
        android:layout_alignTop="@+id/imageView19"
        app:srcCompat="@drawable/ether" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView19"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:background="@drawable/round_corner"
        android:text="TOP UP" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="91dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/imageView14"
        android:layout_alignTop="@+id/imageView14"
        android:ems="10"
        android:background="@drawable/blackcorner"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="13sp"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        android:hint="Enter amount" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="91dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/imageView18"
        android:layout_alignTop="@+id/imageView14"
        android:gravity="center"
        android:background="@drawable/blackcorner"
        android:visibility="invisible"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="91dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/imageView18"
        android:layout_alignTop="@+id/imageView19"
        android:background="@drawable/blackcorner"
        android:gravity="center"
        android:visibility="invisible"
        android:text="TextView" />

</RelativeLayout>